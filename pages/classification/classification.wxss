/* pages/classification/classification.wxss */

page, .container, .container>scroll-view {
  height: 100%;
  overflow: hidden;
}

.white {
  color: white;
}

.head {
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f9;
}

.head>view {
  font-size: 15rpx;
  display: inline-block;
  vertical-align: top;
  color: #87858f;
}

.head .box1 {
  width: 63rpx;
  text-align: center;
  line-height: 25rpx;
  padding-top: 13rpx;
  box-sizing: border-box;
}

.head .box1 image {
  width: 34rpx;
  height: 34rpx;
}

.head .box2 {
  width: 665rpx;
  height: 60rpx;
  background-color: #f1f1f4;
  border-radius: 60rpx;
  margin: 13rpx 0;
}

.head .box2 image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  padding: 0 15rpx;
}

.head .box2 input {
  width: 540rpx;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
  font-size: 23rpx;
  color: #87858f;
}

.head .box3 {
  width: 63rpx;
  text-align: center;
  line-height: 18rpx;
  padding-top: 13rpx;
  box-sizing: border-box;
}

.head .box3 image {
  width: 45rpx;
  height: 40rpx;
}

/*******************************************/

.nav {
  width: 100%;
  font-size: 25rpx;
  text-align: center;
  padding: 21rpx 15rpx;
  box-sizing: border-box;
  color: #333;
}

.nav>view {
  width: 25%;
  display: inline-block;
}

.nav>view image {
  width: 32rpx;
  height: 30rpx;
  vertical-align: top;
}

.nav .z-index {
  color: #e4393c;
}

/***************************************/

.main {
  width: 100%;
  text-align: left;
  background-color: #f5f5f9;
}

.main .list01 {
  width: 368rpx;
  display: inline-block;
  color: #333;
  font-size: 25rpx;
  background-color: #fff;
  margin-top: 6rpx;
  margin-left: 5rpx;
}

.main .list01>image {
  width: 100%;
  height: 368rpx;
  margin: 2rpx 0;
}

.main .list01 .title {
  padding: 0 16rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.main .title text {
  font-size: 17rpx;
  color: #fff;
  background-color: #e4393c;
  padding: 4rpx 6rpx;
  border-radius: 3rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.main .list01 .state {
  padding: 25rpx 16rpx;
}

.main .list01 .state>view {
  display: inline-block;
}

.main .list01  .state .l {
  color: #e4393c;
}

.main .list01 .state>view image {
  width: 13rpx;
  height: 17rpx;
}

.main .state .rmb {
  font-size: 20rpx;
}

.main .state .money {
  font-size: 26rpx;
}

.main .state .moneySmall {
  font-size: 20rpx;
}

.main .list01 .state .r {
  color: #87858f;
  font-size: 23rpx;
  float: right;
  margin-top: 5rpx;
}

/****************************************/

.main .list02 {
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f9;
}

.main .list02>.l {
  width: 198rpx;
  height: 198rpx;
  display: inline-block;
  margin: 1rpx 19rpx;
}

.main .list02>.l image {
  width: 100%;
  height: 100%;
}

.main .list02>.r {
  width: 491rpx;
  display: inline-block;
  font-size: 26rpx;
  color: #333;
  vertical-align: top;
}

.main .list02>.r .title {
  height:70rpx;
  line-height: 35rpx;
  margin: 20rpx 0rpx 26rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.main .list02 .state {
  color: #e4393c;
}

.main .list02 .state .xl {
  font-size: 23rpx;
  color: #87858f;
  margin-top: 20rpx;
}

.main .list02 .state .xl>view{
  width: 44rpx;
  height: 44rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 4rpx;
  float: right;
  position: relative;
  top: -20rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.main .list02 .state .xl image{
  width: 33rpx;
  height: 29rpx;
}

/**************************/
.layer{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 87rpx;
  left: 0;
}
.layer .bg{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, .5);
  top: 0;
  left: 0;
}
.layer .layer-main{
  width: 217rpx;
  height: 100%;
  border-right: 1rpx solid rgba(0, 0, 0, .5);
  position: relative;
  z-index: 9;
  background-color: #fff;
}
.layer .layer-main .list{
  padding: 6rpx 20rpx;
  border-bottom: 2rpx solid #dfdfdf;
  font-size:0;
}
.layer .layer-main .list image{
  width: 29rpx;
  height: 60rpx;
  vertical-align: top;
  margin-right: 16rpx;
}
.layer .layer-main .list text{
  font-size: 21rpx;
  line-height: 60rpx;
  color: #666;
}

/**************************/
.loading{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 25rpx;
}
