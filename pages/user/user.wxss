/* pages/user/user.wxss */

page, .container {
  min-height: 100%;
  background-color: #f5f5f9;
}

navigator {
  overflow: hidden;
}
.container {
  width: 100%;
  display: block;
  position: absolute;
}
.container.isAdvert{
  background-image: url(http://maint.duofriend.com/upload/logo_icon.png);
  background-size: 262rpx 39rpx;
  background-position: center 98%;
  background-repeat: no-repeat;
}

.header {
  width: 100%;
  height: 315rpx;
  background-color: #e45050;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.header>view {
  text-align: center;
  color: #fff;
  font-size: 0;
}

.header image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(0, 0, 0, 0.4);
}

.header .name {
  font-size: 23rpx;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

.header .phone {
  font-size: 20rpx;
}

/***************************************************/

.box {
  width: 100%;
  border-bottom: 1rpx solid #f9f9fb;
  font-size: 0;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.box .l {
  float: left;
}

.box .l text {
  font-size: 27rpx;
  color: #666;
  vertical-align: middle;
}

.box .l image {
  width: 33rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 13rpx;
}

.box .r {
  height:50rpx;
  line-height:50rpx;
  float: right;
  font-size: 0;
}

.box .r image {
  width: 14rpx;
  height: 21rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}

.box .r text {
  font-size:21rpx;
  color:#9e9e9e;
  vertical-align: middle;
}

/****************************************************/

.nav {
  width: 100%;
  background-color: #fff;
  font-size:0;
}

.nav .list {
  width: 25%;
  display: inline-block;
  font-size: 21rpx;
  color: #666;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.nav .list image {
  width: 100%;
  height: 38rpx;
  margin-bottom: 20rpx;
}

/*****************************************************/

.btn-authorization{
  width: 160rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #fff;
  background-color: transparent;
  font-size: 26rpx;
  border: 1rpx solid #fff;
  padding: 0
}

/*****************************************************/

.logo {
  width: 100%;
  text-align: center;
}

.logo image {
  width: 262rpx;
  height: 39rpx;
}
