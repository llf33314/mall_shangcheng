/* pages/myOrder/myOrder.wxss */

page, .container, .container>scroll-view {
  height: 100%;
  overflow: hidden;
}
page {
  background-color: #f5f5f9;
}

.container {
  color: #333;
}
.nav {
  width: 100%;
}

.nav .nav-list {
  width: 20%;
  height: 90rpx;
  line-height: 90rpx;
  display: inline-block;
  font-size: 25rpx;
  text-align: center;
  border-bottom: 1rpx solid #f9f9fb;
  box-sizing: border-box;
  background-color: #fff;
}

.nav .nav-list.z-index {
  color: #e4393c;
  border-bottom: 3rpx solid #e4393c;
}

/************************************/

.main-list {
  width: 100%;
  background-color: #fff;
  margin-bottom: 18rpx;
}

.main-list .state {
  padding-top: 23rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f9;
}

.main-list .state .l {
  width: 50%;
  display: inline-block;
  vertical-align: top;
  padding-left: 28rpx;
  box-sizing: border-box;
}

.main-list .state .l>view {
  font-size: 25rpx;
  color: #e4393c;
}

.main-list .state .l>view.price {
  color: #333;
  margin-top: 21rpx;
}

.main-list .state .r {
  width: 50%;
  text-align: right;
  display: inline-block;
  vertical-align: top;
  padding-top: 9rpx;
  padding-right: 8rpx;
  box-sizing: border-box;
}

.main-list .state .r>view {
  width: 154rpx;
  height: 54rpx;
  display: inline-block;
  line-height: 54rpx;
  background-color: #e4393c;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  border-radius: 5rpx;
  margin-right: 15rpx;
  margin-bottom: 18rpx;
}

.main-list .shopName {
  padding: 16rpx 44rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #f5f5f9;
}

.main-list .shopName image {
  width: 47rpx;
  height: 40rpx;
  vertical-align: top;
  margin-right: 15rpx;
}

.main-list .shop-list {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f9;
}

.main-list .shop-list .l {
  display: inline-block;
  vertical-align: top;
  font-size: 0;
}

.main-list .shop-list .r {
  width: 530rpx;
  display: inline-block;
  vertical-align: top;
}

.main-list .shop-list .l image {
  width: 161rpx;
  height: 161rpx;
  margin-left: 28rpx;
  margin-right: 15rpx;
}

.main-list .shop-list .r .title {
  height: 68rpx;
  font-size: 26rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.main-list .shop-list .r .price {
  color: #e4393c;
  line-height: 50rpx;
}

.main-list .shop-list .r .rmb {
  font-size: 20rpx;
}

.main-list .shop-list .r .money {
  font-size: 26rpx;
}

.main-list .shop-list .r .moneySmall {
  font-size: 20rpx;
}

.main-list .shop-list .specifications {
  font-size: 22rpx;
  color: #87858f;
}


/***********************************/
.orderNum{
    height: 72rpx;
    line-height: 72rpx;
    font-size: 25rpx;
}
.orderNum>text{
    width: 50%;
    display: inline-block;
}
.orderNum>text.l{
    padding-left: 29rpx;
    box-sizing: border-box;
}

/*************************/

.loading{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 25rpx;
}
