/* pages/addAddress/addAddress.wxss */

page,.container{
  min-height: 100%;
  background-color: #f5f5f9;
  color: #333;
}

navigator {
  overflow: hidden;
}
.container {
  width: 100%;
  display: block;
  position: absolute;
}
.container.isAdvert{
  background-image: url(http://maint.duofriend.com/upload/logo_icon.png);
  background-size: 262rpx 39rpx;
  background-position: center 98%;
  background-repeat: no-repeat;
}

/*********************************/

.main-list {
  width: 100%;
  font-size: 24rpx;
  padding-left: 19rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e8e8ed;
  background-color: #fff;
}
.main-list.notBor{
  border-bottom: 0rpx;
}

.main-list .list-l {
  width: 149rpx;
  height:72rpx;
  line-height: 72rpx;
  display: inline-block;
  vertical-align: top;
}

.main-list .list-r {
  display: inline-block;
  vertical-align: top;
}

.main-list .list-r>view,.main-list .list-r input {
  width: 530rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
}

.main-list .list-r textarea {
  width: 520rpx;
  height: 100rpx;
  display: inline-block;
  padding: 0rpx;
  vertical-align: text-top;
  background-color: red
}

.main-list image {
  width: 16rpx;
  height: 25rpx;
  margin-top: 23rpx;
}

.main-list picker{
  width: 100%;
  height: 100%;
}
/*******************************************/
.saveBtn{
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background-color: #e4393c;
  border-radius: 6rpx;
  margin: 0 auto;
}
