/**index.wxss**/

page, .container, .container>scroll-view {
  height: 100%;
  overflow: hidden;
  background-color:#f5f5f9;
}

.container>scroll-view {
  position: relative;
  z-index: 1;
}

/**************************************/

.white {
  color: white;
}

.head {
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 999;
}

.head>view {
  font-size: 15rpx;
  display: inline-block;
  vertical-align: top;
  color: #fff;
}

.head .box1 {
  width: 63rpx;
  text-align: center;
  line-height: 25rpx;
  padding-top: 13rpx;
  box-sizing: border-box;
}

.head .box1 image {
  width: 34rpx;
  height: 34rpx;
}

.head .box2 {
  /*width: 624rpx;*/
  width: 670rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 60rpx;
  margin: 13rpx 0;
}

.head .box2 image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  padding: 0 15rpx;
}

.head .box2 input {
  width: 540rpx;
  height: 100%;
  display: inline-block;
  vertical-align: middle;
  font-size: 23rpx;
}

.head .box3 {
  width: 63rpx;
  text-align: center;
  line-height: 18rpx;
  padding-top: 13rpx;
  box-sizing: border-box;
}

.head .box3 image {
  width: 45rpx;
  height: 40rpx;
}

.swiper {
  width: 100%;
  height: 400rpx;
}

.swiper .wx-swiper-dot-active{
  width: 25rpx;
  border-radius: 25rpx;
}

.swiper swiper {
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/***************************************/

.main {
  width: 100%;
  text-align: left;
  background-color: #f5f5f9;
}

.main .list {
  width: 368rpx;
  display: inline-block;
  color: #333;
  font-size: 25rpx;
  background-color: #fff;
  margin-top: 6rpx;
  margin-left: 5rpx;
}

.main .list>image {
  width: 100%;
  height: 368rpx;
  margin: 2rpx 0;
}

.main .list .title {
  height:55rpx;
  padding: 0 16rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height:27.5rpx;

}

.main .list .title text {
  font-size: 17rpx;
  color: #fff;
  background-color: #e4393c;
  padding: 4rpx 6rpx;
  border-radius: 3rpx;
  vertical-align: middle;
  margin-right: 3rpx;
}

.main .state {
  padding: 25rpx 16rpx;
}

.main .state>view {
  display: inline-block;
}

.main .state .l {
  color: #e4393c;
}

.main .state>view image {
  width: 13rpx;
  height: 17rpx;
}

.main .state .rmb {
  font-size: 20rpx;
}

.main .state .money {
  font-size: 26rpx;
}

.main .state .moneySmall {
  font-size: 20rpx;
}

.main .state .r {
  color: #87858f;
  font-size: 23rpx;
  float: right;
  margin-top: 5rpx;
}
.main .loading{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-size: 25rpx;
}

/**************************/

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.layer .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
}

.layer .layer-main {
  width: 217rpx;
  height: 100%;
  border-right: 1rpx solid rgba(0, 0, 0, 0.5);
  position: relative;
  top: 87rpx;
  z-index: 9;
  background-color: #fff;
}

.layer .layer-main .list {
  padding: 6rpx 20rpx;
  border-bottom: 2rpx solid #dfdfdf;
  font-size: 0;
}

.layer .layer-main .list image {
  width: 29rpx;
  height: 60rpx;
  vertical-align: top;
  margin-right: 16rpx;
}

.layer .layer-main .list text {
  font-size: 21rpx;
  line-height: 60rpx;
  color: #666;
}

.layer .triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 20rpx solid #fff;
  position: absolute;
  top: 75rpx;
  left: 22rpx;
}

/*****************************/

.layer.activity .triangle {
  right:22rpx;
  left:auto;
}

.layer.activity .layer-main {
  margin: 0 0 0 auto;
}
