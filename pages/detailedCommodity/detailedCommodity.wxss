  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 0;
  text-align: right;
  background-color: #fff;
}

.purchase navigator {
  display: inline-block;
  text-align: center;
  vertical-align: top;
}

.purchase navigator .t {
  position: relative;
}

