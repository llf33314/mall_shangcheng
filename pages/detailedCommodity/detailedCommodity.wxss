.purchase navigator .t image {
  width: 95rpx;
  height: 44rpx;
  margin-top: 4rpx;
  margin-bottom: 7rpx;
}

.purchase navigator .b {
  font-size: 20rpx;
  color: #7c8085;
}

.purchase .btn {
  width: 655rpx;
  display: inline-block;
  vertical-align: top;
}

.purchase .btn .l, .purchase .btn .r {
  width: 50%;
  height: 84rpx;
  line-height: 84rpx;
  display: inline-block;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.purchase .btn .l {
  background-color: #ff9600;
}

.purchase .btn .r {
  background-color: #e4393c;
}

/****************************/

.shopDetails, .specifications {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 0;
}

.specifications {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.specifications text {
  width: 50%;
  display: inline-block;
  text-align: left;
}
